# Variables de entorno para el proyecto Estudio
# Copiar este archivo como .env y completar con valores reales

# Clave secreta de Django - CAMBIAR EN PRODUCCIÓN
SECRET_KEY=tu-secret-key-aqui

# Modo debug - False en producción
DEBUG=True

# URL de la base de datos (PostgreSQL para producción)
DATABASE_URL=postgresql://user:password@localhost/dbname

# Hosts permitidos separados por coma
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuración de email (Outlook/SMTP)
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu-email@outlook.com
EMAIL_HOST_PASSWORD=tu-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=tu-email@outlook.com
